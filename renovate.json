{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "rangeStrategy": "bump",
  "schedule": [
    "after 9am on monday"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "types"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "groupName": "patch updates"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
