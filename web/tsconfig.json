{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "src",               // optional, pairs with alias below
    "paths": { "@/*": ["*"] }       // optional, if you want "@/..."
  },
  "include": ["src", "api"],
  "exclude": ["deprecated/**/*", "disabled_api/**/*", "node_modules"]
}
